<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Hi, <%= current_user.first_name %>!</h1>

<h1>Blogs</h1>
<div class="">
  <% @blogs.each do |blog| %>
    <div class="row">
      <div class="col-md-4">
      </div>

      <div class="col-md-4">
        <h2><%= link_to blog.title, blog %></h2>
        <%= image_tag blog.thumb_image %>

        <div class="">
          <%= blog.body %>
        </div>

        <%= link_to 'Edit', edit_blog_path(blog) if logged_in?(:site_admin) %>
        <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
      </div>

      <div class="col-md-4">
      </div>
    </div>
  <br>
  <% end %>
</div>

<br>

<%= link_to 'New Blog', new_blog_path if logged_in?(:site_admin) %>

